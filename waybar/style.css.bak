* {
  min-height: 0px;
  min-width: 0px;
  font-family: "Maple Mono NF CN", sans-serif;
  font-size: 14px;
  font-weight: 600;
}

window#waybar {
  background-color: rgba(255, 255, 255, 0.3); /* Semi-transparent white background */
  box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1); /* Optional shadow to enhance the effect */
  border-radius: 15px; /* Optional rounded corners */
}

#taskbar {
  /*padding-left: 0.4rem;*/
  /* 调整内边距 */
  /*padding-right: 0.4rem;*/
  /* 调整内边距 */
  border-radius: 5px;
  margin: 0.1rem;
}

#taskbar button {
  padding-left: 0.4rem;
  /* 调整内边距 */
  padding-right: 0.4rem;
  /* 调整内边距 */
  border-radius: 5px;
  margin: 0.1rem;

  color: #1e1e2e;
  background-color: #f5c2e7;
}

#taskbar button.active {
  border-radius: 5px;
  color: #1e1e2e;
  background-color: #89b4fa;
}


#workspaces button {
  border-radius: 50%;
  /* 增加圆角 */
  margin: 0.2rem;
  /* 均匀外边距 */
  padding-left: 0.65rem;
  padding-right: 0.65rem;
  padding-top: 0rem;
  padding-bottom: 0rem;

  background-color: #f5c2e7;
  /* 马卡龙粉 */
  color: #1e1e2e;
  /* Mocha Base */
}

#workspaces button:hover {
  box-shadow: inherit;
  text-shadow: inherit;
  color: #f5c2e7;
  /* 与背景色对比 */
  background-color: #1e1e2e;
}

#workspaces button.active {
  background-color: #89b4fa;
  /* Mocha Blue */
  color: #1e1e2e;
}

#workspaces button.urgent {
  background-color: #f38ba8;
  /* Mocha Red */
  color: #ffffff;
  /* 提高对比度 */
}

#clock,
#pulseaudio,
#custom-notification,
#custom-setwallpaper,
#battery,
#cava,
#cpu,
#tray,
#memory,
#network,
#window,
#mpris {
  min-height: 0px;
  min-width: 0px;
  padding-top: 0rem;
  padding-bottom: 0rem;
  padding-left: 0.4rem;
  /* 调整内边距 */
  padding-right: 0.4rem;
  /* 调整内边距 */
  border-radius: 15px;
  margin: 0.2rem;
  /* 均匀外边距 */
  background-color: #1e1e2e;
  /* 马卡龙暖橙 */
  color: #1e1e2e;
}

#mpris.playing {
  background-color: transparent;
  color: #45475a;
  /* Mocha Green */
}

#mpris.paused {
  color: #9399b2;
  background-color: transparent;
}

#custom-sep {
  padding: 0px;
  color: #585b70;
  /* Mocha Surface2 */
}

#cava {
  color: #f9e2af;
}

window#waybar.empty #window {
  background-color: transparent;
}

#cpu {
  background-color: #94e2d5;
